<?xml version="1.0"?>
<component name="clouddesk.import.operation.contrib"
  version="1.0">

  <require>org.nuxeo.ecm.automation.jsf.contrib</require>


  <extension target="org.nuxeo.ecm.core.operation.OperationServiceComponent"
    point="operations">
    <operation
      class="org.nuxeo.ui.jqupload.CDFileManagerImport2" />
  </extension>

  <extension point="chains"
    target="org.nuxeo.ecm.core.operation.OperationServiceComponent">

    <chain id="CDFileManager.ImportInSeam">
      <operation id="Seam.InitContext" />
      <operation id="CDFileManager.Import2">
        <param type="boolean" name="overwite">true</param>
        <param type="string" name="docType">expr:Context.get("cdDocType")</param>
      </operation>
      <operation id="Seam.DestroyContext" />
    </chain>

  </extension>

</component>
